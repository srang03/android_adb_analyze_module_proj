{
  "Adb": {
    "ExecutablePath": null,
    "ConnectionTimeout": 10,
    "CommandTimeout": 60,
    "RetryCount": 3,
    "RetryDelayMs": 1000
  },

  "LogCollection": {
    "OutputDirectory": "./logs",
    
    "Logs": [
      {
        "Name": "activity",
        "DumpsysService": "activity",
        "OutputFileName": "activity.log",
        "ParserConfig": "Configs/Parser/adb_activity_config.yaml",
        "Timeout": 90,
        "Required": true
      },
      {
        "Name": "audio",
        "DumpsysService": "audio",
        "OutputFileName": "audio.log",
        "ParserConfig": "Configs/Parser/adb_audio_config.yaml",
        "Timeout": 60,
        "Required": true
      },
      {
        "Name": "media.camera",
        "DumpsysService": "media.camera",
        "OutputFileName": "media.camera.log",
        "ParserConfig": "Configs/Parser/adb_media_camera_config.yaml",
        "Timeout": 60,
        "Required": true
      },
      {
        "Name": "media.camera.worker",
        "DumpsysService": "media.camera.worker",
        "OutputFileName": "media.camera.worker.log",
        "ParserConfig": "Configs/Parser/adb_media_camera_worker_config.yaml",
        "Timeout": 60,
        "Required": false,
        "Notes": "Samsung-specific service, optional"
      },
      {
        "Name": "media.metrics",
        "DumpsysService": "media.metrics",
        "OutputFileName": "media.metrics.log",
        "ParserConfig": "Configs/Parser/adb_media_metrics_config.yaml",
        "Timeout": 60,
        "Required": true
      },
      {
        "Name": "usagestats",
        "DumpsysService": "usagestats",
        "OutputFileName": "usagestats.log",
        "ParserConfig": "Configs/Parser/adb_usagestats_config.yaml",
        "Timeout": 120,
        "Required": true
      },
      {
        "Name": "vibrator_manager",
        "DumpsysService": "vibrator_manager",
        "OutputFileName": "vibrator_manager.log",
        "ParserConfig": "Configs/Parser/adb_vibrator_config.yaml",
        "Timeout": 60,
        "Required": true
      }
    ]
  },

  "Analysis": {
    "ConfigFile": null,
    "MinConfidenceThreshold": 0.3,
    "EventCorrelationWindowSeconds": 30,
    "MaxSessionGapMinutes": 5,
    "DeduplicationSimilarityThreshold": 0.8
  },

  "Output": {
    "GenerateHtmlReport": true,
    "SaveParsedEvents": true,
    "SaveAnalysisResult": true
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  }
}

